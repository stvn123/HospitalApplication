@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<HospitalApplication.ViewModel.HospitalProcessTimeViewModel>
<div class="text-center">
    <h1 class="display-4">Suggested Hopital</h1>
</div>

<div class="container">
    <div class="row">
        @{
            foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card card-small">
                        <table>
                            <tr>
                                <td>
                                    <div class="card-body">
                                        <h5 class="card-title">@item.HospitalName</h5>
                                    </div>
                                </td>
                                <td>
                                    <div>Wait time: @(item.TotalProcessTime + " " + item.Unit) </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <br />

                </div>
            }
        }

    </div>
</div>